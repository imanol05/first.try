import time
print("En el siguiente programa identificaremos numeros impares, si se introduce uno que no sea impar, se pedira nuevamente hasta que se ingrese un numero impar")
imp = int(input("Ingrese un numero Impar:"))
while (imp%2) == 0:
  print("El numero ingresado es par, se pidio que ingresara un numero impar, por favor intentelo nuevamente")
  imp = int(input("Ingrese un numero Impar:"))
print("Felicidades, eso es todo lo que hace el programa, ahora se auto destruira en....")
time.sleep(1)
print("5")
time.sleep(1)
print("4")
time.sleep(1)
print("3")
time.sleep(1)
print("2")
time.sleep(1)
print("1")
time.sleep(1)
print("Era mentira, Adios")
